&i3c1 {
        status = "okay";

        pinctrl-0 = <&i3c01_sda_target_gpio012 &i3c01_scl_target_gpio013>;
        pinctrl-names = "default";
        i3c1-as-tgt-pid = < 0xB012 0x3456789B >;
        /* false if absent */
        /*i3c1-as-tgt-pid-random;*/
        i3c1-as-tgt-static-addr= < 0x6B >;
        i3c1-as-tgt-mrl = < 8 >;
        i3c1-as-tgt-mwl = < 8 >;
};
