		assigned-address = 0x5D;

		status = "okay";
	};

	i3c0_dev2: dev2@000000C0123456789C {
		compatible = "st,lps22hh";

		reg = < 0x00 0xC012 0x3456789C >;
		assigned-address = 0x5A;

		status = "okay";
