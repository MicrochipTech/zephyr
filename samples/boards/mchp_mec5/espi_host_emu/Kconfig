config SAMPLE_ESPI_ENABLE_PACKET_CRC
	bool "Configure eSPI packet CRC checking"
	default n
	help
	  eSPI emulated host will enable CRC packet checking

config SAMPLE_USE_ESPI_ALERT_PIN
	bool "Configure eSPI to use separate ESPI_nALERT pin instead of in-band alert"
	default n
	help
	  Use ESPI_nALERT side band pin as the alert mechanism
	  instead of the in-band alert on ESPI_IO1 pin.

source "Kconfig.zephyr"
